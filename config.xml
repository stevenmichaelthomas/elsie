<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tailoredux.elsie" version="1.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Elsie</name>
    <description>
        Your guide to the LCBO.
    </description>
    <author email="doug@designcofounders.com" href="http://dougestey.com/">
        Doug Estey
    </author>
    <content src="index.html" />
    <access origin="*" />
    <platform name="windows">
      <icon src="artwork/windows/logo.png" width="150" height="150" />
      <icon src="artwork/windows/smalllogo.png" width="30" height="30" />
      <icon src="artwork/windows/Square44x44Logo.scale-240.png" width="106" height="106" />
      <icon src="artwork/windows/Square71x71Logo.scale-240.png" width="170" height="170" />
      <icon src="artwork/windows/Square150x150Logo.scale-240.png" width="360" height="360" />
      <icon src="artwork/windows/storelogo.png" width="50" height="50" />
      <icon src="artwork/windows/StoreLogo.scale-240.png" width="120" height="120" />
      <icon src="artwork/windows/Wide310x150Logo.scale-240.png" width="744" height="360" />
      <splash src="artwork/windows/splashscreen.png" width="620" height="300" />
      <splash src="artwork/windows/SplashScreen.scale-240.png" width="1152" height="1920" />
    </platform>
    <preference name="SplashScreen" value="splash"/>
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="KeyboardShrinksView" value="true" />
</widget>
