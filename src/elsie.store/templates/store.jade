doctype
.product.store.single.overflow-parent#store(ng-style="image")
  md-content.upper(scroll-position="position",scroll-parent="store")
    .image
    md-toolbar.lower
      .md-toolbar-tools
  md-button.md-fab#md-fab(aria-label="Add to Watchlist",ng-click="setHomeStore(store)")
    md-icon(ng-if="isHome(store)") home
    md-icon(ng-if="!isHome(store)",md-svg-src="img/icon_home_outline.svg")
  md-content.lower.md-default.md-primary-bg
    div(flex="row",layout-wrap)
      .head(flex="90",flex-offset="5")
        h2.title.black.light {{ store.name }}
        h5.title.grey.light {{ store.address_line_1 }}
        md-chips
          md-chip.md-accent {{ status(store) }}
      md-list.key-facts(flex="90",flex-offset="5")
        md-list-item.md-3-line.no-button-pad(ng-click="navigate(store.latitude, store.longitude)")
          img.md-avatar(src="img/icon_location.png")
          .md-list-item-text
            h3 Directions
            p
              span {{ store.address_line_1 }}
              br
              span {{ store.city }}, Ontario {{ store.postal_code }}
          .md-stat(ng-if="store.distance_in_meters")
              p {{ store.distance_in_meters | distance }}
        md-list-item.md-2-line.no-button-pad(ng-click="call(store.telephone)")
          img.md-avatar(src="img/icon_phone.png")
          .md-list-item-text
            h3 {{ store.telephone }}
            p Phone number
      md-list(flex="90",flex-offset="5")
        md-list-item.md-3-line.long
          .md-list-item-text
            h3 Hours
            div(layout="row",ng-class="{ highlighted: today() === 'monday' }")
              div(flex="55")
                p Monday
              div(flex="45",layout-align="right center")
                p {{ store.monday_open | prettyHour }} - {{ store.monday_close | prettyHour }}
            div(layout="row",ng-class="{ highlighted: today() === 'tuesday' }")
              div(flex="55")
                p Tuesday
              div(flex="45",layout-align="right center")
                p {{ store.tuesday_open | prettyHour }} - {{ store.tuesday_close | prettyHour }}
            div(layout="row",ng-class="{ highlighted: today() === 'wednesday' }")
              div(flex="55")
                p Wednesday
              div(flex="45",layout-align="right center")
                p {{ store.wednesday_open | prettyHour }} - {{ store.wednesday_close | prettyHour }}
            div(layout="row",ng-class="{ highlighted: today() === 'thursday' }")
              div(flex="55")
                p Thursday
              div(flex="45",layout-align="right center")
                p {{ store.thursday_open | prettyHour }} - {{ store.thursday_close | prettyHour }}
            div(layout="row",ng-class="{ highlighted: today() === 'friday' }")
              div(flex="55")
                p Friday
              div(flex="45",layout-align="right center")
                p {{ store.friday_open | prettyHour }} - {{ store.friday_close | prettyHour }}
            div(layout="row",ng-class="{ highlighted: today() === 'saturday' }")
              div(flex="55")
                p Saturday
              div(flex="45",layout-align="right center")
                p {{ store.saturday_open | prettyHour }} - {{ store.saturday_close | prettyHour }}
            div(layout="row",ng-class="{ highlighted: today() === 'sunday' }")
              div(flex="55")
                p Sunday
              div(flex="45",layout-align="right center")
                p {{ store.sunday_open | prettyHour }} - {{ store.sunday_close | prettyHour }}