md-toolbar.action-bar(ng-class="{ transparent: transparent, 'md-theme-search' : search }",ng-show="show")
  .md-toolbar-tools
    md-button.md-icon-button.left-button(ng-click="toggleMenu()", ng-class="{ visible: set.menu }")
      md-icon menu
    md-button.md-icon-button.left-button(ng-click="back()", ng-class="{ visible: set.back }")
      md-icon arrow_back
    h2(ng-class="{ visible: set.title }",ng-hide="search")
      span(ng-if="set.title") {{ set.title }}
    md-button.md-icon-button.right-button(ng-click="go('watchlist')", ng-class="{ visible: set.watchlist }")
      md-icon favorite
    md-button.md-icon-button.right-button(ng-click="go('search')", ng-class="{ visible: set.search }")
      md-icon search